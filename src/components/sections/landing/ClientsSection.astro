---
import { Image } from 'astro:assets';
import logo1 from "@images/logo6.png";
import logo2 from "@images/logo10.png";
import logo3 from "@images/logo15.png";
import logo4 from "@images/logo17.png";
import logo5 from "@images/logo20.png";
import logo6 from "@images/logo22.png";
// Define props from Astro
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <div
    class="flex flex-row space-x-6 sm:flex-row sm:gap-x-8 sm:gap-y-0 lg:gap-x-10 animate-loop-scroll"
  >
    <!-- Clients Group SVGs -->
    <!-- First -->
      <Image
        src={logo1}
        alt='logo 1'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"png"}
      />
      <Image
        src={logo2}
        alt='logo 1'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"png"}
      />
      <Image
        src={logo3}
        alt='logo 2'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"png"}
      />
      <Image
        src={logo4}
        alt='logo 3'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
      <Image
        src={logo5}
        alt='logo 5'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
      <Image
        src={logo6}
        alt='logo 6'
        class="max-w-none scale-100 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
    <!-- Second -->
   
      
   
  
    <!-- Third -->
    
        
  
    
    <!-- Fourth -->
     
     
     
    
  </div>
</section>
